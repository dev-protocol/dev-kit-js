{
	"name": "@dev-protocol/dev-kit-js",
	"version": "0.0.1",
	"description": "Dev Kit for JavaScript",
	"author": "abyssparanoia",
	"license": "Apache-2.0",
	"files": [
		"cjs",
		"esm"
	],
	"main": "cjs/index.js",
	"module": "esm/index.js",
	"scripts": {
		"build": "yarn clean && yarn build:cjs && yarn build:esm",
		"build:cjs": "tsc --project . --module commonjs --outDir ./cjs",
		"build:esm": "tsc --project . --module es2015 --outDir ./esm",
		"lint": "yarn lint:eslint && yarn lint:format",
		"lint:eslint": "eslint -c ./.eslintrc.json './lib/**/*.ts' --fix",
		"lint:format": "prettier --write '**/*.{json,md,yml}'",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"prepublishOnly": "yarn test && yarn build",
		"clean": "rimraf esm cjs"
	},
	"devDependencies": {
		"@types/jest": "^24.0.18",
		"@types/web3": "^1.0.20",
		"@typescript-eslint/eslint-plugin": "^2.3.3",
		"@typescript-eslint/parser": "^2.3.3",
		"eslint": "^6.5.1",
		"eslint-config-prettier": "^6.4.0",
		"eslint-config-xo-typescript": "^0.19.0",
		"eslint-plugin-jest": "^22.17.0",
		"eslint-plugin-prettier": "^3.1.1",
		"husky": "^3.0.8",
		"jest": "^24.9.0",
		"lint-staged": "^9.4.2",
		"pre-commit": "^1.2.2",
		"prettier": "^1.18.2",
		"rimraf": "^3.0.0",
		"ts-jest": "^24.1.0",
		"typescript": "^3.6.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"./lib/**/*.ts": [
			"yarn lint",
			"git add"
		]
	},
	"jest": {
		"globals": {
			"ts-jest": {
				"tsConfig": "tsconfig.json"
			}
		},
		"transform": {
			"^.+\\.ts$": "ts-jest"
		},
		"moduleFileExtensions": [
			"js",
			"ts",
			"json"
		],
		"transformIgnorePatterns": [
			"<rootDir>/node_modules/"
		]
	},
	"dependencies": {
		"web3": "^1.2.1"
	},
	"directories": {
		"lib": "lib"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dev-protocol/dev-kit-js.git"
	},
	"bugs": {
		"url": "https://github.com/dev-protocol/dev-kit-js/issues"
	},
	"homepage": "https://github.com/dev-protocol/dev-kit-js#readme",
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/"
	}
}
