{
	"name": "@devprtcl/dev-kit-js",
	"version": "0.5.0",
	"description": "Dev Kit for JavaScript",
	"author": "abyssparanoia",
	"license": "Apache-2.0",
	"files": [
		"cjs",
		"esm"
	],
	"main": "cjs/index.js",
	"module": "esm/index.js",
	"scripts": {
		"build": "yarn clean && run-p -l build:*",
		"build:cjs": "tsc --project . --module commonjs --outDir ./cjs",
		"build:esm": "tsc --project . --module es2015 --outDir ./esm",
		"lint": "yarn lint:eslint && yarn lint:format",
		"lint:eslint": "eslint -c ./.eslintrc.json './lib/**/*.ts' --fix",
		"lint:format": "prettier --write '**/*.{json,md,yml}'",
		"test": "jest",
		"test:coverage": "jest --coverage",
		"prepack": "yarn test && yarn build",
		"clean": "rimraf esm cjs"
	},
	"devDependencies": {
		"@types/jest": "25.2.1",
		"@typescript-eslint/eslint-plugin": "2.28.0",
		"@typescript-eslint/parser": "2.28.0",
		"eslint": "6.8.0",
		"eslint-config-prettier": "6.10.1",
		"eslint-config-xo-typescript": "0.27.0",
		"eslint-plugin-jest": "23.8.2",
		"eslint-plugin-prettier": "3.1.3",
		"husky": "4.2.5",
		"jest": "25.3.0",
		"lint-staged": "9.5.0",
		"npm-run-all": "4.1.5",
		"pre-commit": "1.2.2",
		"prettier": "1.19.1",
		"rimraf": "3.0.2",
		"ts-jest": "24.3.0",
		"typescript": "3.8.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"./lib/**/*.ts": [
			"yarn lint",
			"git add"
		]
	},
	"jest": {
		"globals": {
			"ts-jest": {
				"tsConfig": "tsconfig.json"
			}
		},
		"transform": {
			"^.+\\.ts$": "ts-jest"
		},
		"moduleFileExtensions": [
			"js",
			"ts",
			"json"
		],
		"transformIgnorePatterns": [
			"<rootDir>/node_modules/"
		]
	},
	"dependencies": {
		"web3": "^1.2.5-rc.0"
	},
	"peerDependencies": {
		"web3": "^1.2.5-rc.0"
	},
	"directories": {
		"lib": "lib"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dev-protocol/dev-kit-js.git"
	},
	"bugs": {
		"url": "https://github.com/dev-protocol/dev-kit-js/issues"
	},
	"homepage": "https://github.com/dev-protocol/dev-kit-js#readme"
}
